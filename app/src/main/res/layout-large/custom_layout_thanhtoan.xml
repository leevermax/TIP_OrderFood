<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size5dp"
        android:layout_marginTop="@dimen/size1dp"
        android:layout_marginLeft="@dimen/size1dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/txtTenMonAnThanhToan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tenmonan"
            android:layout_weight="1"
            android:textSize="@dimen/size22sp"
            android:textColor="@color/colorBlack"
            android:padding="@dimen/size10dp"

            />

        <TextView
            android:id="@+id/txtSoLuongThanhToan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/soluong"
            android:layout_weight="1"
            android:textSize="@dimen/size22sp"
            android:textColor="@color/colorBlack"
            android:padding="@dimen/size10dp"
            />

        <TextView
            android:id="@+id/txtGiaTienThanhToan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/giatien"
            android:textSize="@dimen/size22sp"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:padding="@dimen/size10dp"
            />

    </LinearLayout>

</LinearLayout>