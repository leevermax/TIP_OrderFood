<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundDangNhap"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size30sp"
        android:text="@string/dangky"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/size25dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="@dimen/size100dp"
        android:layout_height="@dimen/size100dp"
        android:src="@drawable/logodangnhap"
        android:layout_marginTop="@dimen/size5dp"
        android:layout_alignRight="@+id/LnkhungDangNhap"
        />

    <LinearLayout
        android:id="@+id/LnkhungDangNhap"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/size5dp"
        android:layout_marginRight="@dimen/size5dp"
        android:layout_marginTop="@dimen/size100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edEmailDK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:textColor="@color/colorGray"
            android:padding="@dimen/size10dp"
            android:layout_margin="@dimen/size5dp"
            android:background="@color/colorWhite"
            android:textColorHint="@color/colorGray"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="@dimen/size5dp"
            android:singleLine="true"
            />

        <EditText
            android:id="@+id/edMatKhauDK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nhapmatkhau"
            android:textColor="@color/colorGray"
            android:padding="@dimen/size10dp"
            android:layout_margin="@dimen/size5dp"
            android:background="@color/colorWhite"
            android:textColorHint="@color/colorGray"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="@dimen/size5dp"
            android:singleLine="true"
            android:password="true"
            />
        <EditText
            android:id="@+id/edReMatKhauDK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/matkhaunhaplai"
            android:textColor="@color/colorGray"
            android:padding="@dimen/size10dp"
            android:layout_margin="@dimen/size5dp"
            android:background="@color/colorWhite"
            android:textColorHint="@color/colorGray"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="@dimen/size5dp"
            android:singleLine="true"
            android:password="true"
            />

        <Button
            android:id="@+id/btnDangKyDK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dangky"
            android:padding="@dimen/size10dp"
            android:background="@color/colorPrimary"
            android:layout_margin="@dimen/size5dp"
            android:textStyle="bold"/>

    </LinearLayout>
</RelativeLayout>